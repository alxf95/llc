<div class="modal fade" id="llcModalSignup" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered llc-modal-dialog" role="document">
    <div class="modal-content" id="llc-modal-signup-content">
      <div class="modal-body llc-modal-body">
        <h3 class="modal-title llc-modal-title" id="exampleModalLongTitle">Sign Up</h3>
        <button type="button" class="close cross" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= simple_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>

          <div class="form-inputs modal-form-inputs">
            <div class="custom-form-group">
              <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: "Email",
                        label_html: { class: "form-label" },
                        input_html: { autocomplete: "email", class: "form-input" }%>
            </div>
            <div class="custom-form-group">
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          label: "Password",
                          label_html: { class: "form-label" },
                          input_html: { autocomplete: "new-password", class: "form-input"  } %>
            </div>
            <div class="custom-form-group">
              <%= f.input :password_confirmation,
                          required: true,
                          label: "Confirm password",
                          label_html: { class: "form-label" },
                          input_html: { autocomplete: "new-password", class: "form-input"  } %>
            </div>
            <div class="form-actions flexbox-column">
              <%= f.button :submit, "Submit", class: "llc-button modal-button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
