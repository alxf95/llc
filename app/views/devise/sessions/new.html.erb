<div class="devise-page">
  <div class="row home-container">
    <div class="devise-page-content col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="devise-title">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs devise-form-inputs">
          <div class="devise-custom-form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label_html: { class: "form-label" },
                        input_html: { autocomplete: "email", class: "form-input" } %>
          </div>
          <div class="devise-custom-form-group">
            <%= f.input :password,
                        required: false,
                        label_html: { class: "form-label" },
                        input_html: { autocomplete: "current-password", class: "form-input" } %>
          </div>
          <div id="remember-me-form-group">
            <%= f.input :remember_me,
                        label_html: { class: "form-label", id: "remember-me-label" },
                        as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions flexbox-column">
          <%= f.button :submit, "Log in", class: "llc-button" %>
        </div>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
